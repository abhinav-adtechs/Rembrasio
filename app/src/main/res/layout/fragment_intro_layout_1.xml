<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/intro_background"
    android:layout_width="match_parent"
    android:background="#10806E"

    android:layout_height="match_parent">






    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rembrasio"
        android:gravity="center"
        android:textColor="#fefffe"
        android:fontFamily="sans-serif-thin"
        android:layout_gravity="top|center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="50dp"
        android:textSize="50sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_marginTop="-98dp"
        android:layout_width="230dp"
        android:layout_height="60dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="1dp"

        android:layout_gravity="center"
        app:cardBackgroundColor="#F1ECC8" >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organize"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-thin"
            android:textColor="#13325e"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_marginTop="-38dp"
        android:layout_width="230dp"
        android:layout_height="60dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="1dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#F6A011" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-thin"
            android:textColor="#13325e"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_width="230dp"
        android:layout_height="60dp"
        app:cardCornerRadius="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#E76037" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-thin"
            android:textColor="#214379"/>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/card4"
        android:layout_marginTop="80dp"
        android:layout_width="230dp"
        android:layout_height="60dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="10dp"

        android:layout_gravity="center"
        app:cardBackgroundColor="#AB3F3F"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-thin"
            android:textColor="#c2c6cc"/>

    </android.support.v7.widget.CardView>


    <!-- <TextView
         android:id="@+id/description"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="description"
         android:gravity="center"
         android:textColor="#6cc775"
         android:layout_gravity="bottom|center"
         android:maxEms="18"
         android:layout_marginLeft="32dp"
         android:layout_marginRight="32dp"
         android:layout_marginBottom="32dp"
         android:textSize="20sp"/>-->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circlered"
        android:id="@+id/circle1"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="500dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle"
        android:id="@+id/circle2"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="500dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle"
        android:id="@+id/circle3"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="500dp"
        />


</FrameLayout>